	<groupId>org.openmrs.module</groupId>
	<artifactId>inventory-omod</artifactId>
	<packaging>omod</packaging>
	<name>inventory OMOD</name>
	<description>OpenMRS module project for inventory</description>

	<dependencies>
		
		<dependency>
			<groupId>org.openmrs.api</groupId>
			<artifactId>openmrs-api</artifactId>
			<type>jar</type>
		</dependency>
